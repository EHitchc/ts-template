{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "A base template for working with Typescript",
  "main": "index.js",
  "type": "module",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/EHitchc/ts-template.git"
  },
  "author": "Ethan Hitchcock",
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix",
    "*.{ts,js,css,md}": "prettier --write",
    "*.js": "eslint --cache --fix"
  },
  "scripts": {
    "dev": "node --no-warnings --loader ts-node/esm src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix && prettier --write",
    "test": "jest",
    "prepare": "is-ci || husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
